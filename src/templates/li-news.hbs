{{#each articles}}
<li class="item">
    <article class="article">
        <div class="box-img"><img src="{{urlToImage}}" alt="{{title}}"></div>
        <div class="content-box">
            <h1 class="title-news">{{title}}</h1>
            <p class="author"><span class="author-weight">Автор: </span>{{author}}</p>
            <p class="description">{{description}}</p>
            <a href="{{url}}" target="_blank" rel="noopener noreferrer" class="more">читать дальше</a>
        </div>
    </article>
</li>
{{/each}}